{
    "rules": {
        "eqeqeq": 2,
        "arrow-spacing": [1, { "before": true, "after": true }],
        "array-bracket-spacing": [1, "never"],
        "block-spacing": [1, "always"],
        "brace-style": [1, "1tbs", { "allowSingleLine": false }],
        "camelcase": [1, { "properties": "never" }],
        "comma-spacing": [1, { "before": false, "after": true }],
        "comma-style": [1, "last"],
        "computed-property-spacing": [1, "never"],
        "prefer-arrow-callback": 2,
        "eol-last": 2,
        "key-spacing": [2, { "beforeColon": false, "afterColon": true, "mode": "minimum" }],
        "keyword-spacing": 1,
        "lines-around-comment": [1, { "beforeBlockComment": true }],
        "no-console": 1,
        "no-new-object": 2,
        "no-multiple-empty-lines": [1, { "max": 1 }],
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-undef": 1,
        "object-curly-spacing": [1, "always", { "objectsInObjects": false }],
        "space-before-function-paren": [1, { "anonymous": "always", "named": "never" }],
        "space-before-blocks": 1,
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "space-unary-ops": [1, { "words": true, "nonwords": false }],
        "spaced-comment": [1, "always"],
        "wrap-regex": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "quotes": [1, "single"],
        "jsx-quotes": [1, "prefer-double"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "semi-spacing": 2,
        "comma-dangle": [2, "never"],
        "yoda": 2,
        "arrow-parens": [1, "as-needed", { "requireForBlockBody": true }],
        "babel/no-await-in-loop": 2,
        "react/no-danger": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-direct-mutation-state": 1,
        "react/no-unknown-property": 1,
        "react/prop-types": 1,
        "react/self-closing-comp": 1,
        "react/jsx-boolean-value": [1, "always"],
        "react/jsx-curly-spacing": [1, "always"],
        "react/jsx-indent-props": 1,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-indent": 1,
        "react/jsx-space-before-closing": 1,
        "react/jsx-closing-bracket-location": [1, { selfClosing: "after-props", nonEmpty: "after-props" }]
    },
    "env": {
        "es6": true,
        "browser": true,
        "mongo": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "babel",
        "react",
        "flowtype"
    ],
    "disallowUnusedParams": true,
    "parser": "babel-eslint"
}
